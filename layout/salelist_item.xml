<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="150dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/top"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/img_sp_udai"
            android:layout_width="match_parent"
            android:layout_height="175dp"
            android:src="@drawable/gachchan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/gia"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/top">
        <TextView
            android:id="@+id/gia_km_udai"
            android:gravity="center"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:text="10.000 Đ"
            android:textSize="16dp"
            android:textStyle="bold"
            android:background="@drawable/background_sale" />
        <TextView
            android:id="@+id/gia_goc_udai"
            android:gravity="center"
            android:layout_width="75dp"
            android:layout_height="match_parent"
            android:textSize="13dp"
            android:text="20.000 Đ" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gia">
        <TextView
            android:id="@+id/txt_tensp_udai"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text=" San pham"
            android:textColor="#EAEAEA"/>
<!--        <TextView-->
<!--            android:drawableStart="@drawable/ic_ship"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="20dp"-->
<!--            android:text=" Vận chuyện miễn ..."-->
<!--            android:textColor="#1BCA22"/>-->
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>