<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="182dp"
    android:layout_height="280dp"
    android:id="@+id/constraint"
    android:layout_marginBottom="10dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/top"
        app:cardCornerRadius="10dp"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:layout_marginTop="-6dp"
            android:id="@+id/img_grid"
            android:layout_width="175dp"
            android:layout_height="175dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/gia"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        app:layout_constraintTop_toBottomOf="@id/top">
        <TextView
            android:id="@+id/gia_km"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="10.000 Đ"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:background="@drawable/background_sale" />
        <TextView
            android:id="@+id/gia_goc"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/black"
            android:textSize="13dp"
            android:text="20.000 Đ" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/tit"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gia">
        <TextView
            android:id="@+id/title_grid"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:textSize="24dp"
            android:text=" Vận chuyện miễn ..."
            android:textStyle="bold"
            android:textColor="#4CAF50"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tit">
        <TextView
            android:id="@+id/subtitle_grid"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:text=" Vận chuyện miễn ..."
            android:textColor="@color/black"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>